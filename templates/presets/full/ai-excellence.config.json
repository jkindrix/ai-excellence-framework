{
  "$schema": "https://github.com/ai-excellence-framework/config.schema.json",
  "version": "1.0.0",
  "preset": "full",
  "commands": {
    "enabled": ["plan", "verify", "handoff", "assumptions", "review", "security-review", "refactor", "test-coverage"]
  },
  "agents": {
    "enabled": ["reviewer", "explorer", "tester"]
  },
  "hooks": {
    "enabled": true,
    "postEdit": {
      "enabled": true,
      "timeout": 30
    },
    "verifyDeps": {
      "enabled": true,
      "failOnUnknown": true
    }
  },
  "security": {
    "preCommit": true,
    "secretsDetection": true,
    "dependencyScanning": true,
    "aiPatternChecks": true
  },
  "mcp": {
    "enabled": true,
    "storage": "sqlite",
    "limits": {
      "maxDecisions": 1000,
      "maxPatterns": 100,
      "maxContextKeys": 50
    }
  },
  "metrics": {
    "enabled": true,
    "autoCollect": true,
    "directory": ".tmp/metrics"
  },
  "team": {
    "enabled": false,
    "sharedMemory": false,
    "enforceConventions": true
  }
}
