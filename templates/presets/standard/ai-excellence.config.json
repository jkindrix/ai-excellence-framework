{
  "$schema": "https://github.com/ai-excellence-framework/config.schema.json",
  "version": "1.0.0",
  "preset": "standard",
  "commands": {
    "enabled": ["plan", "verify", "handoff", "assumptions", "review", "security-review"]
  },
  "agents": {
    "enabled": ["reviewer", "explorer"]
  },
  "hooks": {
    "enabled": true,
    "postEdit": {
      "enabled": true,
      "timeout": 30
    },
    "verifyDeps": {
      "enabled": true,
      "failOnUnknown": true
    }
  },
  "security": {
    "preCommit": true,
    "secretsDetection": true,
    "dependencyScanning": true,
    "aiPatternChecks": true
  },
  "mcp": {
    "enabled": false
  },
  "metrics": {
    "enabled": false
  }
}
